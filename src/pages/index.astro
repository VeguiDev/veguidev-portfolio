---
import DiscordProfile from "../components/DiscordProfile.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="VeguiDev - Desarrollador de Software">
  <main class="text-white">
    <section
      class="w-full min-h-screen relative flex flex-col items-center pt-12"
    >
      <div class="absolute left-0 top-0 w-full h-screen bg-neutral-950 -z-10">
      </div>
      <article class="p-2 text-center text-4xl my-12">
        <h2 class="font-bold">Juan Manuel Menta</h2>
        <p class="text-2xl">Desarrollador de Software</p>
      </article>
      <section class="mt-12 mx-4">
        <DiscordProfile />
      </section>
    </section>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
</style>
