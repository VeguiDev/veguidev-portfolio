---
import DiscordProfile from "../components/DiscordProfile.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="VeguiDev - Desarrollador de Software">
  <main>
    <header
      class="w-full bg-slate-950 text-white pt-10 md:h-full grid md:grid-cols-2"
    >
      <div
        class="flex flex-col md:h-[100vh] items-center justify-center max-sm:mb-10 max-sm:mt-10"
      >
        <section class="text-center md:text-left md:w-1/2">
          <h1 class="text-4xl font-bold text-gray-300">VeguiDev</h1>
          <h2
            class="mt-2 text-3xl [text-shadow:0px_0px_3px_var(--tw-shadow-color)] shadow-blue-light text-blue-light font-black"
          >
            Desarrollador de Software
          </h2>
        </section>
      </div>
      <div class="flex items-center justify-center pt-10">
        <DiscordProfile />
      </div>
    </header>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
</style>
